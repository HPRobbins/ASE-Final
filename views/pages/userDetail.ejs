<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>

<header>
   <%- include('../partials/header') %>
</header>

<body>
    <h1 style="padding: 20px; background-color: #FFCD95;"><%= user.firstName %> <%= user.lastName %></h1>
    <div class="container"></div>
            <a href="../users/">Back to index</a> | <a id="btn-edit" href="../users/<%= user.userID %>/edit" ">Edit user</a> | <button onclick="window.location.href='..<%= user.userID %>/addPet/';" type="button" id="btn-add">Add Pet</button> | <button type="button" id="btn-delete">Delete User</button>
            
    </div>
    <div id="userDetail">
        <div style="padding: 20px;">
            <div class="card text-center">
                <div class="card-body"> 
                    <h5 class="card-title" id="nameOfUser"><%= user.firstName %> <%= user.lastName %></h5>
                    <p class="card-text" id="userEmail"><%= user.emailAddress %></p>
                </div>  
            </div>
        </div>
    </div>

    <div class="container text-center"><b>Pets</b></div>

    <div style="padding: 20px;">
        <div id="petDetail"class="container">
            <div class="row">
                <% pets.forEach(function(pet) { %>
                    <div class="col-sm-4">
                        <div class="card" style="width: 22rem;">
                            <div class="card-body">
                                <h5 class="card-title" ><%= pet.petName %> 
                                <p class="card-text">Species: <%= pet.petType %></p><p class="card-text">Gender: <%= pet.petSex %></p> 
                                <p class="card-text">Breed: <%= pet.petBreed %></p> <p class="card-text">Weight: <%= pet.petWeight %></p>
                                <a href="../petDetail/<%= pet.petID %>"  class="btn btn-outline-dark">Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
   
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</html>