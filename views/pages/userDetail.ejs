
<head>
    <%- include('../partials/head') %>
</head>

<header>
   <%- include('../partials/header') %>
</header>

<body>
    <h1 style="padding: 20px; background-color: #FFCD95;"><%= user.firstName %> <%= user.lastName %></h1>
    <div class="container"></div>
            <a href="index.html">Back to index</a> | <a id="btn-edit" href="userEdit.html">Edit user</a> | <button onclick="window.location.href='addPet.html';" type="button" id="btn-add">Add Pet</button> | <button type="button" id="btn-delete">Delete User</button>
            
    </div>
    <div id="userDetail">
        <div style="padding: 20px;">
            <div class="card text-center">
                <div class="card-body"> 
                    <h5 class="card-title" id="nameOfUser"><%= user.firstName %> <%= user.lastName %></h5>
                    <p class="card-text" id="userEmail"><%= user.emailAddress %></p>
                </div>  
            </div>
        </div>
    </div>

    <div class="container text-center"><b>Pets</b></div>

    <div style="padding: 20px;">
        <div id="petDetail">
            <% pets.forEach(function(pet) { %>
				<div class="card" style="width: 22rem;">
					<div class="card-body">
						<h5 class="card-title" font-size:45px;"><%= pet.petName %> 
						<p class="card-text" font-size:20px">Species: <%= pet.petType %> Gender: <%= pet.petSex %></p> 
						<p class="card-text" font-size:20px">Breed: <%= pet.petBreed %> Weight: <%= pet.petWeight %></p>
						<a href="../petDetail/<%= pet.petID %>"  class="btn btn-outline-dark">Details</a>
					</div>
			<% }); %>
        </div>
    </div>
</body>
   
    <footer>
        <%- include('../partials/footer') %>
    </footer>
